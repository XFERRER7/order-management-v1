// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Apartament {
  number    Int      @id @unique
  owner     User?
  orders    Order[]
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  password  String
  apartamentNumber Int @unique
  apartament Apartament @relation(fields: [apartamentNumber], references: [number])
} 

model Order {
  id        Int      @id @default(autoincrement())
  itens     Item[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  status    String
  apartamentNumber Int
  apartament Apartament @relation(fields: [apartamentNumber], references: [number])
}

model Item {
  id        Int      @id @default(autoincrement())
  orderId   Int
  order     Order    @relation(fields: [orderId], references: [id])
  quantity  Int
  name      String
}